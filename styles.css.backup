:root {
    --header-height: 3rem;
    --hue-color: 250;
    --first-color: hsl(var(--hue-color), 69%, 61%);
    --first-color-second: hsl(var(--hue-color), 69%, 61%);
    --first-color-alt: hsl(var(--hue-color), 57%, 53%);
    --first-color-lighter: hsl(var(--hue-color), 92%, 85%);
    --title-color: hsl(var(--hue-color), 8%, 15%);
    --text-color: hsl(var(--hue-color), 8%, 45%);
    --text-color-light: hsl(var(--hue-color), 8%, 65%);
    --input-color: hsl(var(--hue-color), 70%, 96%);
    --body-color: hsl(var(--hue-color), 60%, 99%);
    --container-color: #FFF;
    --scroll-bar-color: hsl(var(--hue-color), 12%, 90%);
    --scroll-thumb-color: hsl(var(--hue-color), 12%, 80%);
    --body-font: "Poppins", sans-serif;
    --big-font-size: 2rem;
    --h1-font-size: 1.5rem;
    --h2-font-size: 1.25rem;
    --h3-font-size: 1.125rem;
    --normal-font-size: .938rem;
    --small-font-size: .813rem;
    --smaller-font-size: .75rem;
    --font-medium: 500;
    --font-semi-bold: 600;
    --mb-0-25: .25rem;
    --mb-0-5: .5rem;
    --mb-0-75: .75rem;
    --mb-1: 1rem;
    --mb-1-5: 1.5rem;
    --mb-2: 2rem;
    --mb-2-5: 2.5rem;
    --mb-3: 3rem;
    --z-tooltip: 10;
    --z-fixed: 100;
    --z-modal: 1000;
}

/*==================== DARK THEME ====================*/
body.dark-theme {
    --first-color-second: hsl(var(--hue-color), 30%, 8%);
    --title-color: hsl(var(--hue-color), 8%, 95%);
    --text-color: hsl(var(--hue-color), 8%, 75%);
    --input-color: hsl(var(--hue-color), 29%, 16%);
    --body-color: hsl(var(--hue-color), 28%, 12%);
    --container-color: hsl(var(--hue-color), 29%, 16%);
    --scroll-bar-color: hsl(var(--hue-color), 12%, 48%);
    --scroll-thumb-color: hsl(var(--hue-color), 12%, 36%);
}

/*==================== BUTTON DARK/LIGHT ====================*/
.nav__btns {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.change-theme {
    font-size: 1.25rem;
    color: var(--title-color);
    cursor: pointer;
}

.change-theme:hover {
    color: var(--first-color);
}

/* Large devices */
@media screen and (min-width: 968px) {
    :root {
        --big-font-size: 3rem;
        --h1-font-size: 2.25rem;
        --h2-font-size: 1.5rem;
        --h3-font-size: 1.25rem;
        --normal-font-size: 1rem;
        --small-font-size: .875rem;
        --smaller-font-size: .813rem;
    }
}

/*==================== BASE ====================*/
* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    margin: 0 0 var(--header-height) 0;
    font-family: var(--body-font);
    font-size: var(--normal-font-size);
    background-color: var(--body-color);
    color: var(--text-color);
}

h1,
h2,
h3,
h4 {
    color: var(--title-color);
    font-weight: var(--font-semi-bold);
}

ul {
    list-style: none;
}

a {
    text-decoration: none;
}

img {
    max-width: 100%;
    height: auto;
}

/*==================== REUSABLE CSS CLASSES ====================*/
.section {
    padding: 2rem 0 2rem;
}

.section__title {
    font-size: var(--h1-font-size);
    color: var(--title-color);
}

.section__subtitle {
    display: block;
    font-size: var(--small-font-size);
    margin-bottom: var(--mb-2);
}

.section__title,
.section__subtitle {
    text-align: center;
}

.container {
    max-width: 768px;
    margin-left: var(--mb-1-5);
    margin-right: var(--mb-1-5);
}

.grid {
    display: grid;
    gap: 1.5rem;
}

/*==================== HEADER ====================*/
.header {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: var(--z-fixed);
    background-color: var(--body-color);
}

/*==================== NAV ====================*/
.nav {
    max-width: 968px;
    height: var(--header-height);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav__logo,
.nav__toggle {
    color: var(--title-color);
    font-weight: var(--font-medium);
}

.nav__logo:hover {
    color: var(--first-color);
}

.nav__toggle {
    font-size: 1.1rem;
    cursor: pointer;
}

.nav__toggle:hover {
    color: var(--first-color);
}

@media screen and (max-width: 767px) {
    .nav__menu {
        position: fixed;
        bottom: -100%;
        left: 0;
        width: 100%;
        background-color: var(--body-color);
        padding: 2rem 1.5rem 4rem;
        box-shadow: 0 -1px 4px rgba(0, 0, 0, .15);
        border-radius: 1.5rem 1.5rem 0 0;
        transition: .3s;
    }
}

.nav__list {
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
}

.nav__link {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 1.1rem;
    color: var(--title-color);
    font-weight: var(--font-medium);
}

.nav__link:hover {
    color: var(--first-color);
}

.nav__icon {
    font-size: 1.8rem;
}

.nav__close {
    position: absolute;
    right: 1.3rem;
    bottom: .5rem;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--first-color);
}

.nav__close:hover {
    color: var(--first-color-alt);
}

/* show menu */
.show-menu {
    bottom: 0;
}

/*==================== HOME ====================*/
.home__container {
    gap: 0.5rem;
}

.home__content {
    grid-template-columns: .5fr 3fr;
    padding-top: 3.5rem;
    align-items: center;
}

.home__social {
    display: grid;
    grid-template-columns: max-content;
    row-gap: 1rem;
}

.home__social-icon {
    font-size: 1.25rem;
    color: var(--first-color);
}

.home__social-icon:hover {
    color: var(--first-color-alt);
}

.home__blob {
    width: 200px;
    fill: var(--first-color);
}

.home__blob-img {
    width: 200px;
    height: 210px;
}

.home__data {
    grid-column: 1/3;
}

.home__buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.home__title {
    font-size: var(--h1-font-size);
    white-space: nowrap;
}

.home__subtitle {
    font-size: var(--h3-font-size);
    color: var(--text-color);
    font-weight: var(--font-medium);
    margin-bottom: var(--mb-0-75);
}

.home__description {
    margin-bottom: var(--mb-2);
}

.home__scroll {
    display: none;
    margin-top: var(--mb-2);
}

.home__scroll-button {
    color: var(--first-color);
    transition: .3s;
    display: inline-flex;
    align-items: center;
}

.home__scroll-button:hover {
    transform: translateY(0.25rem);
}

.home__scroll-mouse {
    font-size: 2rem;
}

.home__scroll-name {
    font-size: var(--small-font-size);
    color: var(--title-color);
    font-weight: var(--font-medium);
    margin-right: var(--mb-0-25);
}

.home__scroll-arrow {
    font-size: 1.25rem;
}

/*==================== BUTTONS ====================*/
.button {
    display: inline-block;
    background-color: var(--first-color);
    color: #FFF;
    padding: 1rem;
    border-radius: .5rem;
    font-weight: var(--font-medium);
}

.button:hover {
    background-color: var(--first-color-alt);
}

.button__icon {
    font-size: 1.25rem;
    margin-left: var(--mb-0-5);
    transition: .3s;
}

.button--white {
    background-color: #FFF;
    color: var(--first-color);
}

.button--white:hover {
    background-color: #FFF;
}

.button--flex {
    display: inline-flex;
    align-items: center;
}

.button--small {
    padding: .75rem 1rem;
}

.button--link {
    padding: 0;
    background-color: transparent;
    color: var(--first-color);
}

.button--link:hover {
    background-color: transparent;
    color: var(--first-color-alt);
}

/*==================== ABOUT ====================*/
.about__container {
    max-width: 768px;
}

.about__data {
    text-align: center;
}

.about__description {
    font-size: var(--normal-font-size);
    line-height: 1.6;
    margin-bottom: var(--mb-2);
    padding: 0 1rem;
}

.about__info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 1.5rem;
    margin-bottom: var(--mb-2);
}

.about__info-box {
    background-color: var(--container-color);
    border: 2px solid var(--first-color);
    border-radius: .75rem;
    padding: 1.25rem .75rem;
    text-align: center;
    transition: .3s;
}

.about__info-box:hover {
    transform: translateY(-0.25rem);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.15);
}

.about__info-icon {
    font-size: 1.5rem;
    color: var(--first-color);
    margin-bottom: var(--mb-0-5);
}

.about__info-title {
    font-size: var(--normal-font-size);
    font-weight: var(--font-semi-bold);
    color: var(--title-color);
    margin-bottom: var(--mb-0-25);
}

.about__info-subtitle {
    font-size: var(--small-font-size);
    color: var(--text-color);
}

.about__buttons {
    display: flex;
    justify-content: center;
}

/*==================== SKILLS ====================*/
.skills.section {
    background: var(--body-color);
    padding: 3rem 0 4rem;
    overflow: hidden;
}

.skills.section .section__title {
    margin-bottom: 0.5rem;
}

.skills.section .section__subtitle {
    margin-bottom: 1rem;
}

.skills__container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 2rem 2.5rem;
    min-height: 280px;
    max-width: 100%;
    margin: 0 auto;
    overflow: visible;
}

.skills__card {
    position: absolute;
    perspective: 1200px;
    animation: bounceIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation-fill-mode: both;
    transition: all 0.4s ease;
    filter: drop-shadow(0 15px 40px rgba(0, 0, 0, 0.7));
}

/* Positioning with rotation and stagger animation - Single line */
.skills__card:nth-child(1) {
    animation-delay: 0s;
    left: 50%;
    top: 50%;
    margin-left: -468px;
    margin-top: -45px;
    transform: rotate(-10deg);
    z-index: 1;
}

.skills__card:nth-child(2) {
    animation-delay: 0.06s;
    left: 50%;
    top: 50%;
    margin-left: -393px;
    margin-top: -45px;
    transform: rotate(-6deg);
    z-index: 2;
}

.skills__card:nth-child(3) {
    animation-delay: 0.12s;
    left: 50%;
    top: 50%;
    margin-left: -318px;
    margin-top: -45px;
    transform: rotate(-3deg);
    z-index: 3;
}

.skills__card:nth-child(4) {
    animation-delay: 0.18s;
    left: 50%;
    top: 50%;
    margin-left: -243px;
    margin-top: -45px;
    transform: rotate(0deg);
    z-index: 4;
}

.skills__card:nth-child(5) {
    animation-delay: 0.24s;
    left: 50%;
    top: 50%;
    margin-left: -168px;
    margin-top: -45px;
    transform: rotate(3deg);
    z-index: 5;
}

.skills__card:nth-child(6) {
    animation-delay: 0.3s;
    left: 50%;
    top: 50%;
    margin-left: -93px;
    margin-top: -45px;
    transform: rotate(6deg);
    z-index: 6;
}

.skills__card:nth-child(7) {
    animation-delay: 0.36s;
    left: 50%;
    top: 50%;
    margin-left: -18px;
    margin-top: -45px;
    transform: rotate(-5deg);
    z-index: 7;
}

.skills__card:nth-child(8) {
    animation-delay: 0.42s;
    left: 50%;
    top: 50%;
    margin-left: 58px;
    margin-top: -45px;
    transform: rotate(8deg);
    z-index: 8;
}

.skills__card:nth-child(9) {
    animation-delay: 0.48s;
    left: 50%;
    top: 50%;
    margin-left: 133px;
    margin-top: -45px;
    transform: rotate(-7deg);
    z-index: 9;
}

.skills__card:nth-child(10) {
    animation-delay: 0.54s;
    left: 50%;
    top: 50%;
    margin-left: 208px;
    margin-top: -45px;
    transform: rotate(5deg);
    z-index: 10;
}

.skills__card:nth-child(11) {
    animation-delay: 0.6s;
    left: 50%;
    top: 50%;
    margin-left: 283px;
    margin-top: -45px;
    transform: rotate(-9deg);
    z-index: 11;
}

.skills__card:nth-child(12) {
    animation-delay: 0.66s;
    left: 50%;
    top: 50%;
    margin-left: 358px;
    margin-top: -45px;
    transform: rotate(7deg);
    z-index: 12;
}

@keyframes bounceIn {
    0% {
        opacity: 0;
        transform: scale(0) rotate(0deg);
    }

    60% {
        opacity: 1;
        transform: scale(1.1);
    }

    80% {
        transform: scale(0.95);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

/* Hover: straighten card */
.skills__card:hover {
    z-index: 100 !important;
    transform: rotate(0deg) scale(1.05) !important;
    filter: drop-shadow(0 15px 35px rgba(99, 102, 241, 0.4));
}

.skills__card-inner {
    position: relative;
    background: var(--container-color);
    padding: 0;
    border-radius: 2.5rem;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    box-shadow:
        0 8px 24px rgba(0, 0, 0, 0.12),
        0 4px 8px rgba(0, 0, 0, 0.08);
    border: 9px solid var(--first-color);
    overflow: visible;
    width: 90px;
    height: 90px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* Ambient glow effect */
.skills__card-inner::before {
    content: '';
    position: absolute;
    top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    background: var(--first-color);
    border-radius: 2.7rem;
    opacity: 0.5;
    transition: opacity 0.4s;
    z-index: -1;
    filter: blur(20px);
}

.skills__card-inner::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, var(--first-color-lighter), transparent 70%);
    border-radius: 2.5rem;
    opacity: 0.5;
    transition: opacity 0.4s;
}

.skills__card-inner>* {
    position: relative;
    z-index: 1;
}

.skills__card:hover .skills__card-inner {
    transform: translateY(-15px) scale(1.05);
    box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.2),
        0 10px 20px rgba(0, 0, 0, 0.15);
    border-color: var(--first-color-alt);
}

.skills__card:hover .skills__card-inner::before {
    opacity: 1;
}

.skills__card:hover .skills__card-inner::after {
    opacity: 1;
}

.skills__icon-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    transition: all 0.4s ease;
    position: relative;
}

/* Icon glow effect */
.skills__icon-wrapper::before {
    content: '';
    position: absolute;
    width: 80px;
    height: 80px;
    background: radial-gradient(circle, var(--first-color-lighter), transparent 60%);
    border-radius: 50%;
    opacity: 0.5;
    transition: opacity 0.4s;
}

.skills__card:hover .skills__icon-wrapper::before {
    opacity: 1;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 0.4;
    }

    50% {
        transform: scale(1.15);
        opacity: 0.7;
    }
}

.skills__card:hover .skills__icon-wrapper {
    transform: scale(1.1);
}

.skills__icon {
    font-size: 3rem;
    color: var(--first-color);
    transition: all 0.4s ease;
    filter: drop-shadow(0 4px 12px rgba(99, 102, 241, 0.3));
    font-weight: 700;
    opacity: 0.5;
}

.skills__card:hover .skills__icon {
    transform: scale(1.25) rotateY(360deg);
    filter: drop-shadow(0 8px 20px rgba(99, 102, 241, 0.6));
    color: var(--first-color-alt);
    opacity: 1;
}

/* Hide text elements for minimalist design */
.skills__name,
.skills__level,
.skills__bar,
.skills__percent {
    display: none;
}

/*==================== QUALIFICATION ====================*/
.qualification__tabs {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: var(--mb-3);
}

.qualification__button {
    font-size: var(--h2-font-size);
    font-weight: var(--font-semi-bold);
    cursor: pointer;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    transition: all .3s;
    color: var(--text-color);
}

.qualification__button:hover {
    color: var(--first-color);
    background: var(--first-color-lighter);
}

.qualification__icon {
    font-size: 1.5rem;
    margin-right: var(--mb-0-5);
}

.qualification__button.qualification__active {
    color: #fff;
    background: var(--first-color);
}

.qualification__sections {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    padding: 2rem 1rem;
}

.qualification__content {
    display: none;
}

.qualification__content.qualification__active {
    display: block;
    position: relative;
}

/* Vertical Timeline Line (centered) */
.qualification__content.qualification__active::before {
    content: '';
    position: absolute;
    width: 4px;
    height: calc(100% - 40px);
    background: var(--first-color);
    left: 50%;
    transform: translateX(-50%);
    top: 20px;
    z-index: 1;
    border-radius: 4px;
}

.qualification__data {
    position: relative;
    margin-bottom: 1.75rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
    align-items: center;
}

/* Timeline Circle */
.qualification__data::before {
    content: '';
    position: absolute;
    width: 12px;
    height: 12px;
    background: var(--first-color);
    border-radius: 50%;
    left: 50%;
    top: 28px;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 6px var(--body-color);
}

/* Keep cards from stretching full width; align them toward center line */
.qualification__card {
    max-width: 520px;
    width: 100%;
}

.qualification__data:nth-child(odd) .qualification__card {
    justify-self: end;
    /* push left-side cards toward center */
    margin-right: 12px;
}

.qualification__data:nth-child(even) .qualification__card {
    justify-self: start;
    /* push right-side cards toward center */
    margin-left: 12px;
}

/* Left side cards (odd items) */
.qualification__data:nth-child(odd) .qualification__card {
    grid-column: 1;
    margin-left: 0;
}

.qualification__data:nth-child(odd)::after {
    content: '';
    grid-column: 2;
}

/* Right side cards (even items) */
.qualification__data:nth-child(even) .qualification__card {
    grid-column: 2;
    margin-left: 0;
}

.qualification__data:nth-child(even)::after {
    content: '';
    grid-column: 1;
}


.qualification__card {
    background: var(--container-color);
    padding: 2rem 1.75rem;
    border-radius: 1.25rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transition: all .3s;
    border: 2px solid transparent;
    position: relative;
    display: flex;
    gap: 1.5rem;
    min-height: 140px;
}

.qualification__data:nth-child(odd) .qualification__card:hover {
    transform: translateX(-0.5rem);
    box-shadow: 0 12px 32px rgba(99, 102, 241, 0.25);
    border-color: var(--first-color);
}

.qualification__data:nth-child(even) .qualification__card:hover {
    transform: translateX(0.5rem);
    box-shadow: 0 12px 32px rgba(99, 102, 241, 0.25);
    border-color: var(--first-color);
}

.qualification__icon-box {
    width: 70px;
    height: 70px;
    min-width: 70px;
    background: var(--input-color);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.qualification__icon-box i {
    font-size: 2.25rem;
    color: var(--first-color);
}

.qualification__info {
    flex: 1;
}

.qualification__calendar {
    font-size: var(--small-font-size);
    color: var(--first-color);
    font-weight: var(--font-semi-bold);
    margin-bottom: var(--mb-0-5);
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.qualification__calendar i {
    font-size: 1rem;
}

.qualification__title {
    font-size: var(--h3-font-size);
    font-weight: var(--font-semi-bold);
    color: var(--title-color);
    margin-bottom: var(--mb-0-5);
    line-height: 1.3;
}

.qualification__subtitle {
    font-size: var(--normal-font-size);
    color: var(--text-color);
    margin-bottom: 0;
    line-height: 1.5;
}

.qualification__description {
    font-size: var(--small-font-size);
    color: var(--text-color-light);
    line-height: 1.6;
    margin-top: var(--mb-0-5);
}

/*==================== SERVICES ====================*/
.services__container {
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
}

.services__content {
    position: relative;
    background-color: var(--container-color);
    padding: 3.5rem .5rem 1.25rem 1.5rem;
    border-radius: .25rem;
    box-shadow: 0 2px 4px rgba(0, 0, 0, .15);
    transition: .3s;
}

.services__content:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, .15);
}

.services__icon {
    display: block;
    font-size: 1.5rem;
    color: var(--first-color);
    margin-bottom: var(--mb-1);
}

.services__title {
    font-size: var(--h3-font-size);
    margin-bottom: var(--mb-1);
    font-weight: var(--font-medium);
}

.services__button {
    cursor: pointer;
    font-size: var(--small-font-size);
}

.services__button:hover .button__icon {
    transform: translateX(.25rem);
}

.services__modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .5);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
    opacity: 0;
    visibility: hidden;
    transition: .3s;
    z-index: var(--z-modal);
}

.services__modal-content {
    position: relative;
    background-color: var(--container-color);
    padding: 1.5rem;
    border-radius: .5rem;
}

.services__modal-services {
    row-gap: 1rem;
}
}

.project__title {
    font-size: var(--h2-font-size);
    margin-bottom: var(--mb-0-75);
}

.project__description {
    margin-bottom: var(--mb-1-5);
}

.project__title,
.project__description {
    color: #FFF;
}

.project__img {
    width: 232px;
    justify-self: center;
}

