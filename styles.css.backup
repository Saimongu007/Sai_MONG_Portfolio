        margin: 0.5rem;
    }

    .skills__card:nth-child(n) {
        transform: rotate(0deg) !important;
        position: relative !important;
    }

    .skills__card:hover {
        transform: rotate(0deg) scale(1.05) !important;
    }

    .skills__card-inner {
        width: 140px;
        height: 180px;
        border-width: 8px;
    }

    .skills__icon {
