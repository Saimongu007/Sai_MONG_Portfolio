/*==================== MODERN HEADLINE ANIMATION ====================*/
.modern-headline {
    position: relative;
    display: block;
    width: fit-content;
    margin-inline: auto;
    opacity: 0;
    filter: blur(10px);
    transform: translateY(30px);
    transition: color 0.3s ease, text-shadow 0.3s ease;
    will-change: transform, opacity, filter, letter-spacing;
}

/* Dark theme specific glow for headlines */
body.dark-theme .modern-headline {
    text-shadow: 0 0 10px rgba(108, 99, 255, 0.1);
}

/* Ensure headlines are visible if JS fails or before load (handled by GSAP usually, but good fallback) */
.modern-headline.visible {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
}